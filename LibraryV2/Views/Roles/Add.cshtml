@model MVC_Library_Otomasyon.Model.Roles
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Roles
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("Add", "Roles", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.DisplayNameFor(x => x.RoleName)
                        @Html.TextBoxFor(x => x.RoleName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.RoleName, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
