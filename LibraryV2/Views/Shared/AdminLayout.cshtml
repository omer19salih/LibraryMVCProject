  @{ 
      var context = new Librarycontext();

      string Username = "", FullName = "", RoleName = "";

      if (User .Identity.IsAuthenticated)
      {
          var modelUser = context.Users.FirstOrDefault(x => x.Email == User.Identity.Name);

          Username = modelUser.Username;
          FullName = modelUser.FullName;

          var modelUserRoles = context.UserRoles.Where(x=>x.UserId == modelUser.Id).ToList();
          foreach (var item in modelUserRoles)
          {
              var modelRoleName = context.Roles.Where(x => x.Id == item .RoleId).ToList();

              for(int i=0; i<modelRoleName.Count;i++)
              {
                  RoleName += modelRoleName[i].RoleName + ",";
              }
              RoleName = RoleName.Substring(0, RoleName.Length - 1);
          }
      }
      }   

