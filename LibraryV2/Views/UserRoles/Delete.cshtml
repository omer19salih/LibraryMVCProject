@model MVC_Library_Otomasyon.Model.UserRoles
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <b>Delete User Role</b>
            </div>
            <div class="ibox-body">
                <h4>Are you sure you want to delete this user role?</h4>
                <dl class="dl-horizontal">
                    <dt>Id:</dt>
                    <dd>@Model.Id</dd>
                    <dt>UserId:</dt>
                    <dd>@Model.UserId</dd>
                    <dt>RoleId:</dt>
                    <dd>@Model.RoleId</dd>
                </dl>
                @using (Html.BeginForm("DeleteConfirmed", "UserRoles", new { id = Model.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Delete</button>
                    @Html.ActionLink("Cancel", "Index", new { @class = "btn btn-secondary" })
                }
            </div>
        </div>
    </div>
</div>
