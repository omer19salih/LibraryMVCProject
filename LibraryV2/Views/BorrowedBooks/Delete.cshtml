@model MVC_Library_Otomasyon.Model.BorrowedBooks

@{
    ViewBag.Title = "Delete Borrowed Book";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                <h2>Delete Borrowed Book</h2>
            </div>
            <div class="ibox-body">
                <h3>Are you sure you want to delete this borrowed book?</h3>

                <div class="form-group">
                    <b>Member:</b>
                    @Html.DisplayFor(model => model.Members.FullName)
                </div>

                <div class="form-group">
                    <b>Book:</b>
                    @Html.DisplayFor(model => model.Books.BookName)
                </div>

                <div class="form-group">
                    <b>Book Count:</b>
                    @Html.DisplayFor(model => model.BookCount)
                </div>

                <div class="form-group">
                    <b>Borrowed Date:</b>
                    @Model.BorrowedDate.HasValue ? Model.BorrowedDate.Value.ToShortDateString() : "N/A"
                </div>

                <div class="form-group">
                    <b>Return Date:</b>
                    @Model.ReturnDate.HasValue ? Model.ReturnDate.Value.ToShortDateString() : "Not Returned"
                </div>

                @using (Html.BeginForm("DeleteConfirmed", "BorrowedBooks", new { id = Model.Id }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        @Html.ActionLink("Cancel", "Index", new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
