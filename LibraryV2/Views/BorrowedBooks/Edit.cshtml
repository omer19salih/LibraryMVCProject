@model MVC_Library_Otomasyon.Model.BorrowedBooks
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                Edit BorrowedBook
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("Edit", "BorrowedBooks", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(x => x.MemberId, "Member")
                        @Html.DropDownListFor(x => x.MemberId, (SelectList)ViewBag.Memberslist, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.MemberId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BookId, "Book")
                        @Html.DropDownListFor(x => x.BookId, (SelectList)ViewBag.Booklist, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BookId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BookCount)
                        @Html.TextBoxFor(x => x.BookCount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BookCount, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BorrowedDate)
                        @Html.TextBoxFor(x => x.BorrowedDate, new { @class = "form-control", type = "datetime-local", value = Model.BorrowedDate.ToString("yyyy-MM-ddTHH:mm") })
                        @Html.ValidationMessageFor(x => x.BorrowedDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
