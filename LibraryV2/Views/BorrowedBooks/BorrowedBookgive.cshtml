@model MVC_Library_Otomasyon.Model.BorrowedBooks
@{
    ViewBag.Title = "BorrowedBookgive";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg">
        <div class="ibox">
            <div class="ibox-head">
                BorrowedBookgive
            </div>
            <div class="ibox-body">
                @using (Html.BeginForm("BorrowedBookgive", "BorrowedBooks", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    <div class="form-group">
                        @Html.LabelFor(x => x.MemberId, "Member")
                        @Html.DropDownListFor(
                            x => x.MemberId,
                            (SelectList)ViewBag.MembersList,
                            "Select a member",
                            new { @class = "form-control" }
                        )
                        @Html.ValidationMessageFor(x => x.MemberId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BookId, "Book")
                        @Html.DropDownListFor(
                            x => x.BookId,
                            (SelectList)ViewBag.BookList,
                            "Select a book",
                            new { @class = "form-control" }
                        )
                        @Html.ValidationMessageFor(x => x.BookId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BookCount)
                        @Html.TextBoxFor(x => x.BookCount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.BookCount, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(x => x.BorrowedDate)
                        @Html.TextBoxFor(x => x.BorrowedDate, new { @class = "form-control", type = "datetime-local" })
                        @Html.ValidationMessageFor(x => x.BorrowedDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Save</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
