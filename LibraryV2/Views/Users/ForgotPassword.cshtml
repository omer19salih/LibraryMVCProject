@model MVC_Library_Otomasyon.Model.Users
@{
    ViewBag.Title = "ForgotPassword";
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width initial-scale=1.0">
    <title>Library Otomasyon | Forgot password</title>
    <link href="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/AdminDashboard/Yeni klasör/html/dist/assets/css/main.css" rel="stylesheet" />
    <link href="~/AdminDashboard/Yeni klasör/html/dist/assets/css/pages/auth-light.css" rel="stylesheet" />
</head>

<body class="bg-silver-300">
    <div class="content">
        <div class="brand">
            <a class="link" href="/Books/Index" style="font-size:large">Library Otomasyon</a>
        </div>

        @using (Html.BeginForm("ForgotPassword", "Users", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <h3 class="m-t-10 m-b-10">Forgot password</h3>
            <p class="m-b-20">Enter your email address below and we'll send you password reset instructions.</p>
            <div class="form-group">
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
            </div>

            <div>
                @if (ViewBag.hata != null)
                {
                    <label class="text-danger">@ViewBag.hata</label>
                }
            </div>

            <div class="form-group">
                <button class="btn btn-info btn-block" type="submit">Submit</button>
            </div>
        }
    </div>
    <div class="sidenav-backdrop backdrop"></div>
    <div class="preloader-backdrop">
        <div class="page-preloader">Loading</div>
    </div>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/jquery/dist/jquery.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/popper.js/dist/umd/popper.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/js/app.js" type="text/javascript"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/jquery/dist/jquery.min.js"></script>
    <script src="~/AdminDashboard/Yeni klasör/html/dist/assets/vendors/metisMenu/dist/metisMenu.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#menu').metisMenu();
        });
   </script>
</body>


</html>
